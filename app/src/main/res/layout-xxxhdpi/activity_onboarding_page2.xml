<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.onboarding_page2"
    android:background="@drawable/screen3bg"
    >

  <TextView

      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="115dp"
      android:fontFamily="@font/papyrus"
      android:text="Paigam"
      android:textColor="@color/white"
      android:textSize="90dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.242"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <ImageView
      android:id="@+id/googlelogin3button"
      android:layout_width="130dp"
      android:layout_height="55dp"
      android:layout_marginStart="240dp"
      android:layout_marginLeft="240dp"
      android:layout_marginEnd="53dp"
      android:layout_marginRight="53dp"
      android:layout_marginBottom="60dp"

    android:src="@drawable/screen3googlelogin"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2"
      app:layout_constraintVertical_bias="0.866" />

  <ImageView
      android:id="@+id/facebooklogin3button"
      android:layout_width="130dp"
      android:layout_height="55dp"
      android:layout_marginBottom="60dp"

      android:src="@drawable/screen3fblogin"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/googlelogin3button"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2"
      app:layout_constraintVertical_bias="0.866" />

  <ImageView
      android:id="@+id/usenameimageView"
      android:layout_width="338dp"
      android:layout_height="80dp"
      android:layout_marginStart="74dp"
      android:layout_marginLeft="74dp"
      android:layout_marginTop="100dp"
      android:layout_marginEnd="108dp"
      android:layout_marginRight="108dp"


      android:src="@drawable/screen3username"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.275"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView">



  </ImageView>
  <ImageView
      android:id="@+id/passwordimageView"
      android:layout_width="338dp"
      android:layout_height="80dp"
      android:layout_marginStart="74dp"
      android:layout_marginLeft="74dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="108dp"
      android:layout_marginRight="108dp"


      android:src="@drawable/screen3password"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.275"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/usenameimageView">



  </ImageView>


  <EditText
      android:id="@+id/passwordtextscreen3"
      android:layout_width="250dp"
      android:layout_height="80dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginStart="74dp"
      android:layout_marginLeft="74dp"
      android:layout_marginTop="100dp"
      android:ems="20"
      android:fontFamily="@font/oswald_semibold"
      android:hint="Password"
      android:inputType="textPassword"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textColorHint="@color/white"
      android:textSize="23dp"
      app:layout_constraintBottom_toBottomOf="@+id/passwordimageView"
      app:layout_constraintEnd_toEndOf="@id/passwordimageView"
      app:layout_constraintHorizontal_bias="0.275"
      app:layout_constraintStart_toStartOf="@+id/passwordimageView"
      />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="145dp"
      android:text="Sign in using"
      android:fontFamily="@font/javatext"
      android:textSize="21dp"
      android:textStyle="bold"

      android:textColor="@color/black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/loginscreen3buttonon"
      android:layout_width="130dp"
      android:layout_height="55dp"
      android:layout_marginStart="240dp"
      android:layout_marginLeft="240dp"
      android:layout_marginEnd="53dp"
      android:layout_marginRight="53dp"
      android:layout_marginBottom="200dp"
      android:background="@drawable/loginbuttons3and2"
      android:text="Log in"
      android:textColor="@color/purple_500"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.4"
      app:layout_constraintStart_toStartOf="parent" />

